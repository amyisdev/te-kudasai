{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": []
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "coverage": {
      "outputs": ["coverage/**"]
    }
  }
}